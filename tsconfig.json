{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "test",
    "**/test",
    "**/*.spec.ts",
    "jest.config.ts",
    "**/*.test.ts"
  ],
  "ts-node": {
    "esm": true,
   "experimentalSpecifierResolution": "node"
  }
}